<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Artistic Event Management Tool</title>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap3/less/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/FontAwesome4/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/toastr/toastr.css" rel="stylesheet" />
    <link href="~/Content/jqueryui/jquery-ui.css" rel="stylesheet" />

</head>
<body>
    <header>
        @*@Html.ActionLink("Artistic Events Management System", "Index", "Home")*@
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <i class="fa fa-bars"></i> </button>
                        <a class="navbar-brand pad-2 mrg-0" href="">
                            <img src="~/Content/img/logo.png" alt="Artistic Event Management System" />
                        </a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Comanda", "Index", "Home")</li>
                            <li>@Html.ActionLink("Administrare", "Index", "Admin")</li>
                            <li>@Html.ActionLink("Despre", "About", "Home")</li>
                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div id="body">@RenderBody()</div>


    @*<footer>
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Alin Bumbes gr 332</p>
            </div>
        </footer>*@

    @* *********** URL FORMATER ************ *@
    <script type="text/javascript">
        urlFormater = function (url) {
            var path = '@(Request.ApplicationPath)';

            if (path != '/')
                path = path + '/';

            return path + url;
        };
    </script>

    <script src="~/Scripts/Dependencies/jquery.min.js"></script>
    <script src="~/Scripts/Dependencies/bootstrap.min.js"></script>
    <script src="~/Scripts/Dependencies/jquery-ui.js"></script>
    <script src="~/Scripts/Dependencies/toastr.js"></script>
    <script src="~/Scripts/Dependencies/knockout.min.js"></script>
    <script src="~/Scripts/Dependencies/knockout.validation.js"></script>
    <script src="~/Scripts/Dependencies/sugar.js"></script>

    <script src="~/Scripts/_appConfig.js"></script>
    <script src="~/Scripts/Shared/constants.js"></script>
    <script src="~/Scripts/Shared/common.js"></script>
    <script src="~/Scripts/Shared/server.js"></script>
    <script src="~/Scripts/Shared/crudAndFilter.js"></script>
    <script src="~/Scripts/Shared/entitiesPaginator.js"></script>

    @RenderSection("scripts", required: false)
</body>

</html>
